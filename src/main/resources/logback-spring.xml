<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <!-- 콘솔 로그 출력 설정 -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>
                %d{yyyy-MM-dd HH:mm:ss.SSS} [%highlight(%-5level)] [%thread] %cyan(%logger{20}) - %msg%n
            </pattern>
            <charset>UTF-8</charset>
        </encoder>
    </appender>

    <!-- 루트 로거: DEBUG 숨기고 INFO 이상만 출력 -->
    <root level="INFO">
        <appender-ref ref="CONSOLE" />
    </root>

    <!-- 필요시 특정 패키지만 DEBUG로 보고 싶다면 이렇게 추가 가능
    <logger name="com.inninglog" level="DEBUG"/>
    -->

</configuration>